<?xml version="1.0" encoding="UTF-8"?>

<!-- config인지 mapper인지 명시하는 설정 -->
<!DOCTYPE mapper
	PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
	"https://mybatis.org/dtd/mybatis-3-mapper.dtd">
	
<mapper namespace="com.example.demo.DAO.IMemberDAO">
	<select id="searchMember" parameterType="string" resultType="com.example.demo.DTO.MemberDTO">
		select * from member where mem_id=#{_id}
	</select>
	<insert id="inserMember" parameterType="com.example.demo.DTO.MemberDTO">
		insert into member values(${mem_id},${mem_pw},${mem_name},${mem_email},${mem_hp})
	</insert>
	<delete id="deleteMember" parameterType="com.example.demo.DTO.MemberDTO">
		delete from member mem_id=${mem_id} AND mem_pw=${mem_pw}
	</delete>
	<update id="updatePass" parameterType="com.example.demo.DTO.MemberDTO">
		update member set mem_pw=${mem_pw} where mem_id=${mem_id}
	</update>
</mapper>